---
interface Props {
  title: string;
  svg: any;
  id?: string;
}

const { title, svg: Svg, id } = Astro.props as Props;
---

<section id={id} class="w-full flex flex-col gap-4">
  <div class="w-full flex flex-row gap-2 items-center">
    <Svg class="size-6 text-white" />
    <h2 class="text-2xl font-normal text-white">{title}</h2>
  </div>
  <slot />
</section>
